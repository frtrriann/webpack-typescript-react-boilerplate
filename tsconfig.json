{
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "target": "es2015",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "build",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["react/jsx-runtime", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**/*"
  ]
}
