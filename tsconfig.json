{
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "target": "es2015",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "build",
    "jsx": "react-jsx",
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["react/jsx-runtime"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
